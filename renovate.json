{
    "packageRules": [
        {
            "description": "Automerge non-major updates",
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true
        },
        {
			"groupName": "nest",
			"matchPackageNames": ["@nestjs/**"],
			"matchUpdateTypes": ["patch", "minor", "major"]
		}
    ],
    "lockFileMaintenance": {
      "enabled": true,
      "automerge": true
    }
}